<form id="document-create" autocomplete="off">
  <div class="form-group">
    <label>{{localize "Name"}}</label>
    <div class="form-fields">
      <input type="text" name="name" placeholder="{{defaultName}}" value="{{ name }}" autofocus>
    </div>
  </div>

  {{#if hasTypes}}
  <div class="form-group">
    <label>{{localize "Type"}}</label>
    <div class="form-fields">
      <select name="type">
        {{selectOptions types selected=type}}
      </select>
    </div>
  </div>
  {{/if}}

  <div class="form-group {{#unless (eq type 'armor')}} hidden {{/unless}}">
    <label>{{localize "ARTICHRON.ITEM.ARMOR.FIELDS.armor.slot.label"}}</label>
    <div class="form-fields">
      <select name="system.armor.slot" {{disabled (ne type "armor")}}>
        {{selectOptions armorSlotOptions}}
      </select>
    </div>
  </div>

  <div class="form-group {{#unless (eq type 'spell')}} hidden {{/unless}}">
    <label>{{localize "ARTICHRON.ITEM.SPELL.FIELDS.spell.origin.label"}}</label>
    <div class="form-fields">
      <select name="system.spell.origin" {{disabled (ne type "spell")}}>
        {{selectOptions spellOriginOptions}}
      </select>
    </div>
  </div>

  {{#if hasFolders}}
  <div class="form-group">
    <label>{{ localize "DOCUMENT.Folder" }}</label>
    <div class="form-fields">
      <select name="folder">
        {{selectOptions folders selected=folder blank="" valueAttr="id" labelAttr="name"}}
      </select>
    </div>
  </div>
  {{/if}}

  {{{content}}}
</form>
