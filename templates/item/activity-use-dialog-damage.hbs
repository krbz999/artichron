<fieldset>
  {{~#if damage.show}}
  <legend>{{damage.legend}}</legend>
  {{#each damage.damages}}
  <p class="damage">
    <span class="formula">{{formula}}</span>
    <span class="type">{{type}}</span>
  </p>
  {{/each}}

  {{#if damage.ammunition}}
  {{formGroup damage.ammunition name="ammunition" localize=true}}
  {{/if}}

  {{formGroup damage.field name="damage" localize=true}}
  {{/if~}}
</fieldset>
