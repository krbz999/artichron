<div class="artichron damage-rolls">

  {{#if rolls.length}}
  {{#each rolls}}
  <div class="dice-roll">
    <i class="{{config.icon}}" style="color: {{config.color}}"></i>
    <div class="dice-result">
      <div class="dice-formula">{{formula}}</div>
      {{{tooltip}}}
      <h4 class="dice-total">{{total}}</h4>
    </div>
  </div>
  {{/each}}

  <button type="button" class="gold-button" data-action="applyDamage">
    <i class="fa-solid fa-burst"></i>
    {{localize "ARTICHRON.ApplyDamage"}}
  </button>
  {{/if}}

  {{#if templateData}}
  <button type="button" class="gold-button" data-action="placeTemplate">
    <i class="fa-solid fa-ruler-combined"></i>
    {{localize "ARTICHRON.PlaceTemplate"}}
  </button>
  {{/if}}

  {{#if effectId}}
  <button type="button" class="gold-button" data-action="grantBuff">
    <i class="fa-solid fa-bolt"></i>
    {{localize "TODO"}}
  </button>
  {{/if}}

  {{#if targets}}
  <div class="targets">
    {{#each targets}}
    <div class="target" data-actor-uuid="{{uuid}}">
      <img src="{{img}}" alt="">
      <span class="name">{{name}}</span>
    </div>
    {{/each}}
  </div>
  {{/if}}

</div>
