<form>
  <div class="form-group">
    <label>{{localize "ARTICHRON.HealthDiePl"}}</label>
    <div class="form-fields">
      <input class="tiny" type="number" name="health.max" value="{{pools.health.max}}">
      <select name="health.faces">
        {{selectOptions config.SYSTEM.DIE_SIZES selected=pools.health.faces}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "ARTICHRON.StaminaDiePl"}}</label>
    <div class="form-fields">
      <input class="tiny" type="number" name="stamina.max" value="{{pools.stamina.max}}">
      <select name="stamina.faces">
        {{selectOptions config.SYSTEM.DIE_SIZES selected=pools.stamina.faces}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "ARTICHRON.ManaDiePl"}}</label>
    <div class="form-fields">
      <input class="tiny" type="number" name="mana.max" value="{{pools.mana.max}}">
      <select name="mana.faces">
        {{selectOptions config.SYSTEM.DIE_SIZES selected=pools.mana.faces}}
      </select>
    </div>
  </div>

  <button type="submit">
    <i class="fa-solid fa-save"></i> {{localize "Save"}}
  </button>
</form>
