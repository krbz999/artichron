<div class="{{tabs.about.tabCssClass}}" data-group="primary" data-tab="about">
  <fieldset>
    <legend>{{localize "ARTICHRON.SheetTab.Biography"}}</legend>
    {{#with biography}}
    {{formGroup field value=value enriched=enriched height=300 toggled=true disabled=@root.isPlayMode}}
    {{/with}}
  </fieldset>

  <fieldset>
    <legend>{{localize "ARTICHRON.SheetTab.Details"}}</legend>
    {{#each details}}
    {{formGroup field value=value disabled=@root.isPlayMode}}
    {{/each}}
  </fieldset>
</div>
