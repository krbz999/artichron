<div class="trading scrollable">

  <fieldset class="stock">
    <legend>{{localize "ARTICHRON.SheetTab.Stock"}}</legend>
    {{#each stock}}
    <div class="inventory-list">
      <header>
        <span class="label">{{label}}</span>
      </header>
      {{#each items}} {{inventoryItem item disabled=true}} {{/each}}
    </div>
    {{/each}}
  </fieldset>

  <fieldset class="cart">
    <legend>{{localize "ARTICHRON.SheetTab.Cart"}}</legend>
    <div class="inventory-list">
      {{#each cart}}
      {{inventoryItem item enriched=enriched disabled=true}}
      {{/each}}
    </div>
  </fieldset>

  {{#if false}}
  <fieldset class="config">
    <legend>{{actor.name}}</legend>
    {{#if isOwner}}
    {{formGroup name.field value=name.value label=name.label classes="stacked"}}
    {{formGroup shop.field value=shop.value classes="stacked"}}
    {{formGroup img.field value=img.value label=img.label classes="stacked"}}
    {{formGroup bio.field value=bio.value enriched=bio.enriched height=200 toggled=true}}
    {{else}}
    {{{bio.enriched}}}
    {{/if}}
  </fieldset>
  {{/if}}
</div>
