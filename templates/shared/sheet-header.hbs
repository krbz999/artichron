<header class="header">
  {{#if isPlayMode}}
  <h1 class="name">{{header.name}}</h1>
  {{else}}
  <input class="name" name="name" type="text" value="{{header.name}}" placeholder="{{localize 'Name'}}" {{disabled isPlayMode}}>
  {{/if}}
  <img class="avatar" alt="{{header.name}}" src="{{header.img}}" {{#if isEditMode}}data-edit="img" data-action="editImage"{{/if}}>
</header>
