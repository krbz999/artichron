{{!-- Sheet Header --}}
<header class="header">
  <img class="avatar" src="{{header.img}}" {{#if isEditMode}}data-action="editImage" style="cursor: pointer"{{/if}}>
  <input name="name" type="text" value="{{header.name}}" placeholder="{{localize 'Name'}}" {{disabled isPlayMode}}>
  <div class="controls">
    <a class="control" data-action="toggleSheet" data-tooltip="ARTICHRON.SheetActions.ToggleSheet">
      <i class="fa-solid fa-user-{{ifThen isPlayMode 'lock' 'pen'}}"></i>
    </a>
    <a class="control" data-action="toggleOpacity" data-tooltip="ARTICHRON.SheetActions.ToggleOpacity">
      <i class="fa-solid"></i>
    </a>
  </div>
</header>
