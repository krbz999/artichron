<header class="section-header">
  {{localize "ARTICHRON.Resistances"}}
  {{#unless editing}}
  <a class="edit" data-action="toggle-config" data-trait="resistances" data-tooltip="ARTICHRON.EditResistances">
    <i class="fa-solid fa-cog"></i>
  </a>
  {{/unless}}
</header>
{{#if editing}}
{{#each context.resistances}}
<div class="resistance">
  <i class="{{icon}}" style="color: #{{color}}"></i>
  <input class="tiny" type="number" name="system.resistances.{{@key}}.bonus" value="{{bonus}}">
</div>
{{/each}}
{{else}}
{{#each context.resistances}}
{{#if total}}
<div class="resistance">
  <i class="{{icon}}" style="color: #{{color}}"></i> ({{total}})
</div>
{{/if}}
{{/each}}
{{/if}}
