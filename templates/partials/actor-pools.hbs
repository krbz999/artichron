<header class="section-header">
  {{localize "ARTICHRON.Pools"}}
  {{#if sheet.isEditMode}}
  <a class="edit" data-action="toggle-config" data-tooltip="ARTICHRON.EditSkills" data-trait="skills" style="right: 25px">
    <i class="fa-solid fa-cog"></i>
  </a>
  <a class="edit" data-action="toggle-config" data-tooltip="ARTICHRON.EditPools" data-trait="pools">
    <i class="fa-solid fa-cog"></i>
  </a>
  {{/if}}
</header>
<div class="pool-rolls darken">
  {{#each context.pools as |pool|}}
  <a class="pool" data-action="manage" data-manage="pool" data-pool="{{pool.key}}">
    <span class="die {{pool.denom}} {{pool.key}}" data-tooltip="{{pool.value}} / {{pool.max}} ({{pool.die}})">{{pool.value}}</span>
  </a>
  {{/each}}
</div>
