{{#if subtypes}}
<div class="form-group">
  <label>{{localize "ARTICHRON.ItemProperty.Subtype"}}</label>
  <div class="form-fields">
    <select name="system.category.subtype" {{disabled (or document.isEquipped isPlayMode)}}>
      {{selectOptions subtypes selected=document.system.category.subtype labelAttr="label" blank="" sort=true}}
    </select>
  </div>
</div>
{{/if}}

{{#if sections.wield}}
{{formField wield.field value=wield.value disabled=wield.disabled localize=true}}
{{/if}}

{{#if sections.range}}
{{formField range.field value=range.value disabled=range.disabled localize=true}}
{{/if}}

{{#if sections.price}}
{{formField price.field value=price.value disabled=price.disabled localize=true}}
{{/if}}

{{#if sections.template}}
<div class="form-group">
  <label>{{localize "ARTICHRON.ItemProperty.Template"}}</label>
  <div class="form-fields">
    <multi-select name="system.template.types" {{disabled isPlayMode}}>
      {{#each templates}}
      <option value="{{key}}" {{ifThen selected "selected" ""}}>{{label}}</option>
      {{/each}}
    </multi-select>
  </div>
</div>
{{/if}}

{{#if sections.weight}}
{{formField weight.field value=weight.value disabled=weight.disabled localize=true}}
{{/if}}

{{#if sections.quantity}}
{{formField quantity.field value=quantity.value disabled=quantity.disabled localize=true}}
{{/if}}

{{#if sections.usage}}
<div class="form-group usage">
  <label>{{localize "ARTICHRON.ItemProperty.Usage"}}</label>
  <div class="form-fields">
    {{formInput usage.value.field value=usage.value.value disabled=usage.value.disabled}}
    <span class="sep">{{localize "ARTICHRON.ItemProperty.UsageOf"}}</span>
    {{formInput usage.max.field value=usage.max.value disabled=usage.max.disabled}}
  </div>
</div>
{{/if}}

{{#if sections.armor}}
{{formField armor.field value=armor.value disabled=armor.disabled localize=true}}
{{/if}}

{{#if document.isEmbedded}}
<div class="form-group">
  <label>{{localize "ARTICHRON.ItemProperty.Favorited"}}</label>
  <a class="action" data-action="favoriteItem">
    <i class="fa-{{ifThen isFavorited 'solid' 'regular'}} fa-star"></i>
  </a>
</div>
{{/if}}
