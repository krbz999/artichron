{{#if context.categories}}
<div class="form-group">
  <label>{{localize "ARTICHRON.ItemProperty.Category"}}</label>
  <div class="form-fields">
    <select name="system.type.category" {{disabled document.isEquipped}}>
      {{selectOptions context.categories selected=system.type.category localize=true labelAttr="label" blank="" sort=true}}
    </select>
  </div>
</div>
{{/if}}

{{#if context.subtypes}}
<div class="form-group">
  <label>{{localize "ARTICHRON.ItemProperty.Subtype"}}</label>
  <div class="form-fields">
    <select name="system.type.subtype">
      {{selectOptions context.subtypes selected=system.type.subtype localize=true labelAttr="label" blank="" sort=true}}
    </select>
  </div>
</div>
{{/if}}

{{#if isArmor}}
<div class="form-group">
  <label>{{localize "ARTICHRON.SetIdentifier"}}</label>
  <div class="form-fields">
    <select name="system.identifier">
      {{selectOptions config.ARMOR_SETS selected=system.identifier localize=true labelAttr="label" blank="" sort=true}}
    </select>
  </div>
</div>
{{/if}}

{{#if system.wield}}
<div class="form-group">
  <label>{{localize "ARTICHRON.ItemProperty.Wield"}}</label>
  <div class="form-fields">
    <select name="system.wield.value" {{disabled document.isEquipped}}>
      {{#select system.wield.value}}
      <option value="1">{{localize "ARTICHRON.ItemWieldOneHanded"}}</option>
      <option value="2">{{localize "ARTICHRON.ItemWieldTwoHanded"}}</option>
      {{/select}}
    </select>
    <input type="number" name="system.wield.range" value="{{source.wield.range}}" placeholder="{{localize 'ARTICHRON.ItemProperty.Range'}}">
  </div>
</div>
{{/if}}

{{#if system.price}}
<div class="form-group">
  <label>{{localize "ARTICHRON.ItemProperty.Price"}}</label>
  <div class="form-fields">
    <input class="delta" data-dtype="Number" type="text" name="system.price.value" value="{{source.price.value}}">
  </div>
</div>
{{/if}}

{{#if system.template}}
<div class="form-group">
  <label>{{localize "ARTICHRON.ItemProperty.Template"}}</label>
  <div class="form-fields">
    <multi-select name="system.template.types">
      {{#each context.templates}}
      <option value="{{key}}" {{ifThen selected "selected" ""}}>{{localize label}}</option>
      {{/each}}
    </multi-select>
  </div>
</div>
{{/if}}

{{#if system.weight}}
<div class="form-group">
  <label>{{localize "ARTICHRON.ItemProperty.Weight"}}</label>
  <div class="form-fields">
    <input class="delta" data-dtype="Number" type="text" name="system.weight.value" value="{{source.weight.value}}">
  </div>
</div>
{{/if}}

{{#if system.quantity}}
<div class="form-group">
  <label>{{localize "ARTICHRON.ItemProperty.Quantity"}}</label>
  <div class="form-fields">
    <input class="delta" data-dtype="Number" type="text" name="system.quantity.value" value="{{system.quantity.value}}">
  </div>
</div>
{{/if}}

{{#if system.usage}}
<div class="form-group item-usage">
  <label>{{localize "ARTICHRON.ItemProperty.Usage"}}</label>
  <div class="form-fields">
    <input class="delta" data-dtype="Number" type="text" name="system.usage.value" value="{{system.usage.value}}" max="{{system.usage.max}}">
    <span class="sep">{{localize "ARTICHRON.ItemUsageOf"}}</span>
    <input type="text" name="system.usage.max" value="{{source.usage.max}}">
  </div>
</div>
{{/if}}

{{#if document.isEmbedded}}
<div class="form-group">
  <label>{{localize "ARTICHRON.Favorited"}}</label>
  <a class="action" data-action="control" data-control="favorite">
    <i class="fa-{{ifThen context.isFavorited 'solid' 'regular'}} fa-star"></i>
  </a>
</div>
{{/if}}
