<div class="tab scrollable {{ifThen tabs.inventory.active 'active' ''}}" data-group="primary" data-tab="inventory">

  <nav class="inventory tabs" data-group="inventory">
    {{#each items}}
    <a class="item {{ifThen active 'active' ''}}" data-action="tab" data-tab="{{key}}" data-group="inventory">{{localize label}}</a>
    {{/each}}
  </nav>

  {{#each items}}
  <div class="tab scrollable {{ifThen active 'active' ''}}" data-tab="{{key}}" data-group="inventory">

    <header>
      <span class="name"></span>
      <span class="properties"></span>
      <button type="button" data-action="createItem" data-tooltip="ARTICHRON.Item.Add">
        <i class="fa-solid fa-plus"></i>
      </button>
    </header>

    {{#each items}}
    <div class="item" data-item-uuid="{{item.uuid}}">

      <a class="wrapper" data-action="useItem">
        <img src="{{item.img}}" alt="{{item.name}}" class="image">
        <label class="name">{{item.name}}</label>
      </a>

      <div class="properties">

        {{#if hasUsage}}
        <div class="property">
          <div class="counter">
            <input type="text" class="delta" id="{{item.id}}" value="{{item.system.usage.value}}" data-action="updateEmbedded" data-property="system.usage.value" placeholder="0" max="{{item.system.usage.max}}">
            <span class="sep">/</span>
            <span class="max">{{item.system.usage.max}}</span>
          </div>
          <span class="label">{{localize "ARTICHRON.ItemProperty.Usage"}}</span>
        </div>
        {{/if}}

        {{#if hasQty}}
        <div class="property">
          <div class="counter">
            <input type="text" class="delta" id="{{item.id}}" value="{{item.system.quantity.value}}" data-action="updateEmbedded" data-property="system.quantity.value" placeholder="0">
          </div>
          <span class="label">{{localize "ARTICHRON.ItemProperty.Quantity"}}</span>
        </div>
        {{/if}}

      </div>

      <div class="controls">
        <a class="control" data-action="favoriteItem"><i class="fa-{{ifThen favorited 'solid' 'regular'}} fa-star"></i></a>
        <a class="control" data-action="editItem"><i class="fa-solid fa-edit"></i></a>
        <a class="control" data-action="deleteItem"><i class="fa-solid fa-trash"></i></a>
      </div>

    </div>
    {{/each}}

  </div>
  {{/each}}

</div>
