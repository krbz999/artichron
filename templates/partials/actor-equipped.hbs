<div class="equipped-items" data-collection="items">
  <div class="backdrop" style="background-image: url({{document.img}})"></div>
  {{#each context.equipped}}
  <div class="equipped {{cssClass}}" data-tooltip-direction="UP" data-tooltip="{{tooltip}}" {{#if item}} data-item-id="{{item.id}}" {{/if}}>
    <div class="equipped-item" {{#each data}} {{#if this}} data-{{@key}}="{{this}}" {{/if}} {{/each}}>
      <img src="{{img}}">
    </div>
  </div>
  {{/each}}
</div>
