<div class="{{tabs.description.tabCssClass}}" data-group="primary" data-tab="description">
  {{#if (and isEditable isEditMode)}}
  {{#with description}}
  {{formGroup field value=value enriched=enriched localize=true toggled=true height=300 collaborate=true documentUUID=uuid}}
  {{/with}}
  {{else}}
  <div class="description">
    {{{description.enriched}}}
  </div>
  {{/if}}
</div>
