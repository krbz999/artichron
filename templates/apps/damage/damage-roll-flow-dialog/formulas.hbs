<section>
  <section class="formulas">
    {{#each ctx.formulas}}
    <div class="damage-formula" data-index="{{index}}">
      <div class="formula">{{formula}}</div>
      {{#if damageOptions}}
      <div class="type">
        <select name="damageType.{{index}}">
          {{selectOptions damageTypes selected=damageType}}
        </select>
      </div>
      {{else}}
      <div class="type">{{damageType}}</div>
      {{/if}}
    </div>
    <div class="form-group">
      <label>{{localize "ARTICHRON.DAMAGE.bonus.label"}}</label>
      <div class="form-fields">
        <input type="text" name="bonus.{{index}}" placeholder="{{localize 'ARTICHRON.DAMAGE.bonus.placeholder'}}">
      </div>
    </div>
    {{#unless @last}} <hr> {{/unless}}
    {{/each}}
  </section>
</section>
