<section class="tab {{tabs.activities.cssClass}}" data-group="{{tabs.activities.group}}" data-tab="{{tabs.activities.id}}">
  <div class="document-list activities" data-pseudo-document-name="Activity">

    <h3 class="document-list-header">
      <span>{{localize "ARTICHRON.SHEET.SPELL.HEADERS.activities"}}</span>
      <button type="button" class="create-document icon fa-solid" data-action="createPseudoDocument" {{disabled isPlayMode}}></button>
    </h3>

    <div class="document-list-entries">
      {{#each ctx.activities}}
      <div class="entry button" data-action="renderPseudoDocumentSheet" data-pseudo-id="{{activity.id}}" {{disabled disabled}}>
        <img src="{{activity.img}}" alt="{{activity.name}}" class="icon">
        <span class="title">{{name}}</span>
        <span class="subtitle">{{localize (concat "TYPES.Activity." activity.type)}}</span>
      </div>
      {{/each}}
    </div>

  </div>
</section>
