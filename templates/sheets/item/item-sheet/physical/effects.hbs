<section class="tab {{tabs.effects.cssClass}}" data-group="{{tabs.effects.group}}" data-tab="{{tabs.effects.id}}">
  <div class="document-list effects" data-document-name="ActiveEffect">

    {{!-- ENHANCEMENTS --}}
    <h3 class="document-list-header">
      <span>{{localize "TYPES.ActiveEffect.enhancementPl"}}</span>
      <button type="button" class="create-document icon fa-solid" data-action="createEmbeddedDocument" data-type="enhancement" {{disabled isPlayMode}}></button>
    </h3>

    {{#each ctx.effects.enhancements}}
    <button type="button" data-action="renderEmbeddedDocumentSheet" data-id="{{effect.id}}" {{#if effect.disabled}} class="inactive" {{/if}}>
      <img src="{{effect.img}}" alt="{{effect.name}}" class="icon">
      <span class="title">{{effect.name}}</span>
      <span class="subtitle">{{localize "TYPES.ActiveEffect.enhancement"}}</span>
    </button>
    {{/each}}

    {{!-- BUFFS --}}
    <h3 class="document-list-header">
      <span>{{localize "TYPES.ActiveEffect.buffPl"}}</span>
      <button type="button" class="create-document icon fa-solid" data-action="createEmbeddedDocument" data-type="buff" {{disabled isPlayMode}}></button>
    </h3>

    {{#each ctx.effects.buffs}}
    <button type="button" data-action="renderEmbeddedDocumentSheet" data-id="{{effect.id}}" {{#if effect.disabled}} class="inactive" {{/if}}>
      <img src="{{effect.img}}" alt="{{effect.name}}" class="icon">
      <span class="title">{{effect.name}}</span>
      <span class="subtitle">{{localize "TYPES.ActiveEffect.buff"}}</span>
    </button>
    {{/each}}
  </div>

</section>
