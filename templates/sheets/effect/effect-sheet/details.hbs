<div class="tab {{tabs.details.cssClass}}" data-group="{{tabs.details.group}}" data-tab="{{tabs.details.id}}">

  {{#with fields.description}}
  {{formGroup field value=value enriched=enriched compact=true localize=true height=150 collaborate=true documentUUID=uuid disabled=true toggled=true}}
  {{/with}}

  <fieldset>
    <legend>{{localize "ARTICHRON.SHEET.LEGENDS.details"}}</legend>
    {{#if fields.subtype.field}}
    {{formGroup fields.subtype.field value=fields.subtype.value localize=true disabled=isPlayMode}}
    {{/if}}

    {{formGroup fields.tint.field value=fields.tint.value localize=true disabled=isPlayMode}}
    {{formGroup fields.disabled.field value=fields.disabled.value label="EFFECT.Disabled" localize=true disabled=isPlayMode}}

    {{#if fields.transfer.show}}
    {{formGroup fields.transfer.field value=fields.transfer.value label="EFFECT.Transfer" hint="EFFECT.TransferHint" localize=true disabled=root.isPlayMode}}
    {{/if}}
  </fieldset>

  <fieldset>
    <legend>{{localize "ARTICHRON.SHEET.LEGENDS.duration"}}</legend>
    {{formGroup fields.combat.field value=fields.combat.value localize=true disabled=true}}

    {{#if fields.expiration}}
    {{formGroup fields.expiration.field value=fields.expiration.value localize=true disabled=isPlayMode}}
    {{/if}}
  </fieldset>

</div>
