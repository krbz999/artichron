<section class="tab {{tabs.effects.cssClass}}" data-group="{{tabs.effects.group}}" data-tab="{{tabs.effects.id}}">

  <div class="document-list effects" data-document-name="ActiveEffect">
    {{!-- CONDITIONS --}}
    {{#if ctx.conditions.length}}
    <h3 class="document-list-header">
      <span>{{localize "ARTICHRON.SHEET.MONSTER.HEADERS.conditions"}}</span>
    </h3>
    {{document-list-entries documents=ctx.conditions}}
    {{/if}}

    {{!-- ACTIVE BUFFS --}}
    <h3 class="document-list-header">
      <span>{{localize "ARTICHRON.SHEET.MONSTER.HEADERS.activeBuffs"}}</span>
      <button class="create-document icon fa-solid" type="button" data-action="createEmbeddedDocument" data-type="buff" {{disabled (not editable)}}></button>
    </h3>
    {{document-list-entries documents=ctx.buffs.active}}

    {{!-- INACTIVE BUFFS --}}
    {{#if ctx.buffs.inactive.length}}
    <h3 class="document-list-header">
      <span>{{localize "ARTICHRON.SHEET.MONSTER.HEADERS.inactiveBuffs"}}</span>
    </h3>
    {{document-list-entries documents=ctx.buffs.inactive}}
    {{/if}}
  </div>

</section>
