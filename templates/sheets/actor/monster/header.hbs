<section class="header">
  {{#if (and isEditMode editable)}}

  <div class="details">
    {{formInput fields.name value=source.name placeholder=(localize "Name")}}

    <dl class="tags">
      <dt>{{document.system.damage.label}}</dt>
      <dd class="button" data-action="configure" data-config="damage">
        {{document.system.damage.formula}} <i class="fa-solid fa-{{lookup (lookup config.DAMAGE_TYPES document.system.damage.type) 'icon'}}"></i>
      </dd>
    </dl>
  </div>
  <img class="avatar" alt="{{source.name}}" src="{{source.img}}" data-edit="img" data-action="editImage">

  {{else}}

  <div class="details">
    <h1 class="name">{{document.name}}</h1>
    <dl class="tags">
      <dt>{{document.system.damage.label}}</dt>
      <dd class="button" data-action="rollDamage">
        {{document.system.damage.formula}} <i class="fa-solid fa-{{lookup (lookup config.DAMAGE_TYPES document.system.damage.type) 'icon'}}"></i>
      </dd>
    </dl>
  </div>
  <img class="avatar" alt="{{document.name}}" src="{{document.img}}">

  {{/if}}
</section>
