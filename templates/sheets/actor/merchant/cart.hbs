<section class="tab scrollable {{tabs.cart.cssClass}}" data-tab="{{tabs.cart.id}}" data-group="{{tabs.cart.group}}">
  <div class="document-list scrollable cart" data-document-name="Item">
    <h3 class="document-list-header">
      <span>{{localize "ARTICHRON.SHEET.MERCHANT.HEADERS.cart"}}</span>
    </h3>
    {{document-list-entries documents=ctx.cart classes="scrollable" action="none"}}
  </div>

  {{#if isGM}}
  <button type="button" data-action="checkout">
    <i class="fa-solid fa-fw fa-cart-flatbed"></i>
    {{localize "ARTICHRON.SHEET.MERCHANT.checkout"}}
  </button>
  {{/if}}
</section>
