<section class="tab {{tabs.inventory.cssClass}}" data-group="{{tabs.inventory.group}}" data-tab="{{tabs.inventory.id}}">

  <search>
    <input type="search" id="inventory-search" placeholder="{{localize 'SIDEBAR.Search' types=(localize 'DOCUMENT.Items')}}" value="{{ctx.searchQuery}}">
  </search>

  <div class="document-list scrollable items" data-document-name="Item">
    <h3 class="document-list-header">
      <span>{{localize "ARTICHRON.SHEET.HERO.HEADERS.inventory"}}</span>
      <button type="button" class="create-document fa-solid icon" data-action="createEmbeddedDocument" {{disabled (not editable)}}></button>
    </h3>

    {{document-list-entries classes="compact scrollable" documents=ctx.items action="useItem"}}

  </div>

</section>
