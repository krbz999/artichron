<section class="tab {{tabs.attributes.cssClass}}" data-group="{{tabs.attributes.group}}" data-tab="{{tabs.attributes.id}}">

  <div class="left-pane">
    <fieldset class="pools">
      {{#if isEditMode}}
      <a class="edit fa-solid fa-cog" data-action="toggleConfig" data-tooltip="ARTICHRON.POOL.edit" data-trait="pools"></a>
      {{/if}}
      {{#each ctx.pools}}
      <a class="pool die d{{faces}} {{key}}" data-action="rollPool" data-pool="{{key}}" data-tooltip="{{value}} / {{max}} (d{{faces}})">
        <span class="label">{{value}}</span>
      </a>
      {{/each}}
    </fieldset>

    <fieldset class="health">
      <input type="text" name="system.health.value" class="delta" value="{{ctx.health.value}}" placeholder="0">
      <span class="sep">/</span>
      <span class="max">{{ctx.health.max}}</span>

      <div class="health-bar" style="--health-bar-pct: {{ctx.health.pct}}%"></div>
      <a class="control fa-solid fa-heart" data-action="recoverHealth" data-tooltip="ARTICHRON.HERO.recover"></a>
    </fieldset>
  </div>

  <div class="center-pane scrollable">

    <fieldset class="favorites">
      <legend>{{localize "ARTICHRON.SHEET.LEGENDS.favorites"}}</legend>
      <div class="inventory-list compact">
        {{#each document.favorites}}{{inventoryItem this}}{{/each}}
      </div>
    </fieldset>

    <fieldset class="defenses">
      <legend>{{localize "ARTICHRON.SHEET.LEGENDS.defenses"}}</legend>
      {{#each ctx.defenses}}
      <div class="defense {{#if active}} active {{/if}}" data-tooltip="{{label}}" style="color: #{{color}}">
        <span class="total">{{value}}</span>
        <i class="{{icon}}"></i>
      </div>
      {{/each}}
    </fieldset>

    <fieldset class="skills">
      <legend>{{localize "ARTICHRON.SHEET.LEGENDS.skills"}}</legend>
      {{#each ctx.skills}}
      <a class="skill label-top" data-action="rollSkill" data-skill-id="{{skillId}}">
        <label>{{label}}</label>
        <img src="{{img}}" alt="{{label}}">
        <span class="value">{{value}}d6</span>
      </a>
      {{/each}}
    </fieldset>

  </div>

</section>
