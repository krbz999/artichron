{
  "id": "artichron",
  "title": "Artichron",
  "description": "Implementation of the Artifice Chronicles system.",
  "version": "1.0.0",
  "compatibility": {
    "minimum": "13.344",
    "verified": "13",
    "maximum": "13"
  },
  "authors": [
    {
      "name": "Zhell",
      "url": "https://github.com/krbz999",
      "discord": "zhell9201",
      "ko-fi": "https://ko-fi.com/zhell",
      "patreon": "https://patreon.com/zhell"
    }
  ],
  "esmodules": ["artichron.mjs"],
  "styles": [{ "src": "artichron.css", "layer": "system" }],
  "packs": [
    {
      "name": "actors",
      "label": "Actors",
      "path": "packs/actors",
      "type": "Actor"
    },
    {
      "name": "items",
      "label": "Items",
      "path": "packs/items",
      "type": "Item"
    },
    {
      "name": "rules",
      "label": "Rules",
      "path": "packs/rules",
      "type": "JournalEntry"
    },
    {
      "name": "tables",
      "label": "Tables",
      "path": "packs/tables",
      "type": "RollTable"
    }
  ],
  "packFolders": [
    {
      "name": "Artichron",
      "sorting": "a",
      "color": "#000000",
      "packs": [
        "actors",
        "items",
        "rules",
        "tables"
      ]
    }
  ],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
  ],
  "media": [
    {
      "type": "cover",
      "loop": false,
      "flags": {}
    },
    {
      "type": "setup",
      "url": "systems/artichron/assets/layout/banner.webp",
      "thumbnail": "systems/artichron/assets/layout/banner.webp"
    }
  ],
  "grid": {
    "distance": 1,
    "units": "m"
  },
  "socket": true,
  "url": "https://github.com/krbz999/artichron",
  "manifest": "https://github.com/krbz999/artichron/releases/latest/download/system.json",
  "download": "",
  "license": "LICENSE.txt",
  "changelog": "CHANGELOG.md",
  "flags": {
    "hotReload": {
      "extensions": ["css", "hbs", "json"],
      "paths": ["lang", "styles", "templates"]
    }
  },
  "documentTypes": {
    "Actor": {
      "hero": {
        "htmlFields": ["details.notes"]
      },
      "monster": {
        "htmlFields": ["biography.value"]
      },
      "merchant": {
        "htmlFields": ["biography.value"]
      },
      "party": {
        "htmlFields": ["clocks.*.description"]
      }
    },
    "Item": {
      "ammo": {
        "htmlFields": [
          "description.value"
        ]
      },
      "armor": {
        "htmlFields": [
          "description.value"
        ]
      },
      "elixir": {
        "htmlFields": [
          "description.value"
        ]
      },
      "part": {
        "htmlFields": [
          "description.value"
        ]
      },
      "path": {
        "htmlFields": [
          "description.value"
        ]
      },
      "spell": {
        "htmlFields": [
          "description.value",
          "activities.*.description"
        ]
      },
      "talent": {
        "htmlFields": [
          "description.value"
        ]
      }
    },
    "ChatMessage": {
      "damage": {},
      "trade": {},
      "usage": {}
    },
    "Combatant": {
      "artichron": {}
    },
    "ActiveEffect": {
      "buff": {},
      "condition": {},
      "enhancement": {},
      "fusion": {}
    },
    "RegionBehavior": {
      "enterStore": {},
      "doorState": {},
      "statusCondition": {}
    }
  }
}
