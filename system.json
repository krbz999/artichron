{
  "id": "artichron",
  "title": "Artichron",
  "description": "Implementation of the Artifice Chronicles system.",
  "version": "1.0.0",
  "compatibility": {
    "minimum": 12,
    "verified": 12,
    "maximum": 12
  },
  "authors": [
    {
      "name": "Zhell",
      "url": "https://github.com/krbz999",
      "discord": "zhell9201",
      "ko-fi": "https://ko-fi.com/zhell",
      "patreon": "https://patreon.com/zhell"
    }
  ],
  "esmodules": ["artichron.mjs"],
  "styles": [
    "styles/artichron.css",
    "styles/rolls.css",
    "styles/sheets-actors.css",
    "styles/sheets-effects.css",
    "styles/sheets-items.css",
    "styles/sheets.css"
  ],
  "packs": [
    {
      "name": "actors",
      "label": "Actors",
      "path": "packs/actors",
      "type": "Actor"
    },
    {
      "name": "items",
      "label": "Items",
      "path": "packs/items",
      "type": "Item"
    },
    {
      "name": "rules",
      "label": "Rules",
      "path": "packs/rules",
      "type": "JournalEntry"
    }
  ],
  "packFolders": [
    {
      "name": "Artichron",
      "sorting": "a",
      "color": "#000000",
      "packs": [
        "actors",
        "items",
        "rules"
      ]
    }
  ],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
  ],
  "grid": {
    "distance": 1,
    "units": "m"
  },
  "initiative": "1d20",
  "primaryTokenAttribute": "health",
  "secondaryTokenAttribute": "pools.health",
  "socket": true,
  "url": "https://github.com/krbz999/artichron",
  "manifest": "https://github.com/krbz999/artichron/releases/latest/download/system.json",
  "download": "",
  "license": "LICENSE.txt",
  "changelog": "CHANGELOG.md",
  "flags": {
    "hotReload": {
      "extensions": ["css", "hbs", "json"],
      "paths": ["lang/en.json", "styles/*.css", "templates/**/*.hbs"]
    }
  },
  "documentTypes": {
    "Actor": {
      "hero": {
        "htmlFields": ["details.notes"]
      },
      "monster": {
        "htmlFields": ["biography.value"]
      },
      "merchant": {}
    },
    "Item": {
      "ammo": {
        "htmlFields": ["description.value"]
      },
      "armor": {
        "htmlFields": ["description.value"]
      },
      "elixir": {
        "htmlFields": ["description.value"]
      },
      "part": {
        "htmlFields": ["description.value"]
      },
      "shield": {
        "htmlFields": ["description.value"]
      },
      "spell": {
        "htmlFields": ["description.value"]
      },
      "weapon": {
        "htmlFields": ["description.value"]
      }
    },
    "ChatMessage": {
      "damage": {},
      "healing": {},
      "trade": {},
      "usage": {}
    },
    "Combatant": {
      "artichron": {}
    },
    "ActiveEffect": {
      "buff": {},
      "condition": {},
      "enhancement": {},
      "fusion": {}
    }
  }
}
