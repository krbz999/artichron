#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node" --max-old-space-size=4096 "$basedir/../run-func/mem.js" "$@"
else 
  exec node --max-old-space-size=4096 "$basedir/../run-func/mem.js" "$@"
fi
